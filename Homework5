string text = File.ReadAllText("C:\\Users\\irina\\OneDrive\\Desktop\\File.txt");

Console.WriteLine(text);

var ArrayWords = text.Split(new char[] { ' ', ',', '.', ':' }, StringSplitOptions.RemoveEmptyEntries);
var counter = 0;
var result = string.Empty;
var maxCount = 0;

foreach (var word in ArrayWords)
{
    for (int index = 0; index < word.Length; index++)
    {
        if (char.IsDigit(word[index]))
        {
            counter++;
        }

    }
    if (maxCount < counter)
    {
        result = word;
        maxCount = counter;
    }
    counter = 0;

}
Console.WriteLine(result);


